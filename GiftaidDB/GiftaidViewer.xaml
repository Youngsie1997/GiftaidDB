        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GiftaidDB"
        mc:Ignorable="d"
        Title="GiftaidViewer" Height="160.666" Width="661.006" Initialized="Viewer_Initialized" SizeToContent="Height" Icon="oxfamLogo.png">
    <Window.Resources>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
        </Style>
        <Style TargetType="DataGridCell">
            <Setter Property="TextBlock.TextAlignment" Value="Center"></Setter>
            

        </Style>
        
        
    </Window.Resources>
    
    
    
    <Grid>
        <DataGrid x:Name="dgGiftaid"  AutoGeneratingColumn="dgGiftaid_AutoGeneratingColumn" IsReadOnly="True" CanUserResizeColumns="False" CanUserReorderColumns="False" CanUserResizeRows="False" AlternatingRowBackground="#FF40F181" AlternationCount="2" />

    </Grid>
</Window>
